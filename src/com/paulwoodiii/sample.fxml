<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.paulwoodiii.Controller">
   <children>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0">
         <children>
            <TextField fx:id="usernameTextField" onKeyPressed="#usernameOnKeyPressed" prefWidth="100.0" promptText="username" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="emailTextField" onKeyPressed="#emailOnKeyPressed" prefHeight="27.0" prefWidth="100.0" promptText="email" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </TextField>
            <PasswordField fx:id="passwordTextField" promptText="password">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </PasswordField>
            <Button mnemonicParsing="false" onAction="#addButtonPressed" text="+" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#deleteButtonPressed" text="-" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
         </children></HBox>
      <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
